<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/build/style/main.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        <header class="container">
            <div class="row">
                <div id="profile" class="col-md-12 col-sm-12 col-xs-12">
                    <div>
                        {% if is_granted("ROLE_USER") %}
                            <a href="{{ path('fos_user_security_logout') }}">Logout</a>
                            <a href="{{ path('jms_translation_index') }}">Translation UI</a>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}">Login</a>
                            <a href="{{ path('fos_user_registration_register') }}">Registration</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        {% block body %}{% endblock %}
    </body>
</html>
